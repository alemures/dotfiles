! Xft font

Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcdfilter

! URxvt

URxvt.font: xft:Ubuntu Mono:size=12
URxvt.saveLines: 5000
URxvt.scrollBar: false
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! Plugins
URxvt.perl-ext: default,matcher,resize-font
! matcher
URxvt.url-launcher: sensible-browser
URxvt.keysym.Control-Delete: perl:matcher:last
URxvt.keysym.Meta-Delete: perl:matcher:list
URxvt.matcher.button: 1
!resize-font
URxvt.keysym.Meta-k: font-size:increase
URxvt.keysym.Meta-j: font-size:decrease
